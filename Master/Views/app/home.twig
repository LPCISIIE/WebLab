{% extends 'layout.twig' %}
{% block body %}
    <div id="dashboard" class="ui main container">
        <h1>Welcome to your dashboard</h1>
        <div class="ui celled grid">
            <div class="row">
                <div class="nine wide column">
                    <div id='container1' class="ui cards"></div>
                </div>
                <div class="seven wide column">
                    <div class="ui form">
                        <div class="field">
                            <label>Enter your algorithm</label>
                            <textarea id="textAlgo"></textarea>
                        </div>
                    </div>
                    <div class="ui bottom positive attached button" tabindex="0" id="uploadAlgo">
                        Validate &nbsp;
                        <i class="check icon"></i>
                    </div>
                </div>

            </div>
        </div>
        <div class="ui section divider"></div>
        <div class="ui container servers">
            <h1>Servers connected to the application</h1>
            <div id="slaveContainer"></div>
        </div>
    </div>
    {% block result %}
        {% include 'app/result.twig' %}
    {% endblock %}
    <script src="/js/lib/codemirror.js"></script>
    <script src="/js/lib/javascript.js"></script>
    <script src="/js/lib/show-hint.js"></script>
    <script src="/js/lib/closebrackets.js"></script>
    <script src="/js/lib/javascript-hint.js"></script>
    <script type="text/javascript">
      let editor = CodeMirror.fromTextArea(document.getElementById("textAlgo"), {
        lineNumbers: true,
        extraKeys: {"Ctrl-Space": "autocomplete"},
        mode: {name: "javascript", globalVars: true},
        autoCloseBrackets: true
      });
    </script>
{% endblock %}
