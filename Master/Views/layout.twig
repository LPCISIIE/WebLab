<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>
            {% block title %}WebLab{% endblock %}
        </title>

        <!-- Semantic -->
        {% block stylesheets %}
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css"/>
          <link rel="stylesheet" href="/stylesheets/css/app.css"/>
          <link rel="stylesheet" href="https://codemirror.net/lib/codemirror.css">
          <link rel="stylesheet" href="https://codemirror.net/addon/hint/show-hint.css">
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]> <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script> <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script> <![endif]-->
    </head>
    <body>
        {% block navbar %}
            {% include 'app/navbar.twig' %}
        {% endblock %}

        {% block flash %}
            {% include 'app/flash.twig' %}
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}
            {% include 'app/footer.twig' %}
        {% endblock %}

        <script src="/js/lib/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.js"></script>
        <script src="/js/lib/bootstrap.min.js"></script>
        <script src="/js/lib/socket.io.min.js"></script>
        <script src="https://codemirror.net/lib/codemirror.js"></script>
        <script src="https://codemirror.net/mode/javascript/javascript.js"></script>
        <script src="https://codemirror.net/addon/hint/show-hint.js"></script>
        <script src="https://codemirror.net/addon/edit/closebrackets.js"></script>
        <script src="https://codemirror.net/addon/hint/javascript-hint.js"></script>
        <script type="text/javascript">

      var editor = CodeMirror.fromTextArea(document.getElementById("textAlgo"), {
        lineNumbers: true,
        extraKeys: {"Ctrl-Space": "autocomplete"},
        mode: {name: "javascript", globalVars: true},
        autoCloseBrackets: true
      });

        </script>
        {% if socket is defined %}
            <script type="text/javascript" src="/js/vue/algo.js"></script>
            <script type="text/javascript" src="/js/controller/controller.js"></script>
        {% endif %}
    </body>
</html>
